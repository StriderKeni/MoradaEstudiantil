<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="SingleGradient">
        <item name="android:background">@drawable/selector_gradient</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@drawable/selector_color</item>
    </style>

    <style name="MultiGradient">
        <item name="android:background">@drawable/selector_multi_gradients</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@drawable/selector_color</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Light.Base.ActionBar.Solid.Inverse">

    </style>

    <style name="BarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

    </style>

    <style name="BarTabText" parent="Widget.AppCompat.Base.ActionBar.TabText">

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>
