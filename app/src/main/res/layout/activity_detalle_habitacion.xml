<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detalleScrollView"
    tools:context="greatlifedevelopers.studentrental.activitys.DetalleHabitacionActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:id="@+id/progress"
                android:progressDrawable="@drawable/progress_bar"
                android:layout_centerInParent="true"
                />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">


            <ImageButton
                android:layout_width="160dp"
                android:layout_margin="5dp"
                android:layout_height="120dp"
                android:id="@+id/thumb_button_1"
                android:layout_marginRight="1dp"
                android:src="@drawable/hotel1_1"
                android:scaleType="centerCrop"/>


            <ImageButton
                android:layout_width="160dp"
                android:layout_margin="5dp"
                android:layout_height="120dp"
                android:id="@+id/thumb_button_2"
                android:layout_marginRight="1dp"
                android:src="@drawable/hotel1_1"
                android:scaleType="centerCrop"/>


        </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:id="@+id/progress2"
                android:progressDrawable="@drawable/progress_bar"
                android:layout_centerInParent="true"
                />

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp">

            <ImageButton
                android:layout_width="160dp"
                android:layout_margin="5dp"
                android:layout_height="120dp"
                android:id="@+id/thumb_button_3"
                android:layout_marginRight="1dp"
                android:src="@drawable/hotel1_1"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:layout_width="160dp"
                android:layout_margin="5dp"
                android:layout_height="120dp"
                android:id="@+id/thumb_button_4"
                android:layout_marginRight="1dp"
                android:src="@drawable/hotel1_1"
                android:scaleType="centerCrop"/>

        </LinearLayout>

        </RelativeLayout>



        <ImageView
            android:id="@+id/expanded_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bluebackground" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Características"
            android:id="@+id/textView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:text="Tipo de Habitación"
                android:textSize="16sp"
                android:textAlignment="center"  />

            <TextView
                android:id="@+id/tipo_habitacion"
                android:layout_width="0px"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Precio"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <TextView
                    android:id="@+id/precio_habitacion"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:text="Tipo de Cama"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <TextView
                    android:id="@+id/tipo_cama"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

            </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Descripción Habitación" />

        <TextView
            android:id="@+id/descripcion_habitacion"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:textColor="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:layout_width="fill_parent"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Internet"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_internet"
                    android:src="@drawable/ic_action_tick" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Tv Cable"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_tv_cable"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Baño Privado"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textAlignment="center"  />

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/img_bano_privado"
                android:src="@drawable/ic_action_tick" />

            <TextView
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Baño Común"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textAlignment="center"  />

            <ImageView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/img_bano_comun"
                android:src="@drawable/ic_action_tick" />

        </LinearLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bluebackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Alimentación"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Desayuno"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_desayuno"
                    android:src="@drawable/ic_action_tick" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Almuerzo"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_almuerzo"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Once"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_once"
                    android:src="@drawable/ic_action_tick" />

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Cena"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_cena"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bluebackground" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Características Adicionales"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Estacionamiento"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_estacionamiento"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Acceso Lavanderia"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_lavanderia"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="Servicio Habitación"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textAlignment="center"  />

                <ImageView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_serv_habitacion"
                    android:src="@drawable/ic_action_tick" />

            </LinearLayout>




        </LinearLayout>








    </LinearLayout>


</ScrollView>
